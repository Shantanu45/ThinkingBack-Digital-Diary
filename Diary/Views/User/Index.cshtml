@model Microsoft.AspNetCore.Identity.IdentityUser

<div class="container-fluid w-75 ">
    <div class="card">
        <div class="card-body">
            <h2>Account Information</h2>
            <hr />

            <label>Username:</label>
            @Model.UserName
            <hr />
            <a asp-controller="User" asp-action="AskNewPassword" style="color: rgb(255, 54, 97)">Change Password</a>
        </div>
    </div>
</div>

